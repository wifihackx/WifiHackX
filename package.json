{
  "name": "wifihackx-v2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node tools/build-static-dist.js && node tools/minify-dist-html.js",
    "preview": "vite preview",
    "sitemap": "node tools/generate-sitemap.js",
    "indexnow": "node tools/submit-indexnow.js",
    "lighthouse:ci": "node tools/lighthouse-ci-with-build.js",
    "validate:sprint5": "node tools/validate-sprint5.js",
    "validate:sprint5:live": "node tools/validate-sprint5.js --live",
    "mirror:check": "node tools/check-mirror-consistency.js",
    "mirror:check:strict": "node tools/check-mirror-consistency.js --strict",
    "mirror:refresh": "node tools/refresh-mirror-artifacts.js",
    "firebase:quiet": "node tools/firebase-cli.js",
    "deploy:hosting:quiet": "node tools/firebase-cli.js deploy --only hosting",
    "validate:dist": "node tools/validate-dist.js",
    "minify:html": "node tools/minify-dist-html.js",
    "preprod": "node tools/preprod-check.js",
    "gate:release": "npm run mirror:check:strict && npm run security:scan",
    "smoke:live": "powershell -ExecutionPolicy Bypass -File tools/smoke-live.ps1",
    "deploy:check": "powershell -ExecutionPolicy Bypass -File tools/deploy-check.ps1",
    "test": "vitest run",
    "test:rules": "node tools/run-firestore-rules-tests.js",
    "test:watch": "vitest",
    "test:all": "vitest run tests/unit && node tools/run-firestore-rules-tests.js && npm run build",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test tests/e2e/admin-smoke.spec.js",
    "test:e2e:ui": "playwright test --ui",
    "release:final:ci": "npm run mirror:check:strict && npm run test:all && npm run build --silent",
    "release:final": "npm run test:all && npm run deploy:check && git status --short",
    "uptime:check": "node tools/uptime-check.js",
    "validate:external": "node tools/validate-external.js",
    "security:scan": "powershell -ExecutionPolicy Bypass -File tools/scan-secrets.ps1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.2",
    "firebase": "^12.9.0",
    "html-minifier-terser": "^7.2.0",
    "jsdom": "^28.1.0",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "tmp": "0.2.5",
    "external-editor": "3.1.0",
    "inquirer": "9.3.8"
  }
}
