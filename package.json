{
  "name": "wifihackx-v2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prepare": "husky install",
    "bundle:deferred-css": "node tools/generate-deferred-css-bundle.js",
    "build": "npm run bundle:deferred-css && node tools/build-static-dist.js && node tools/minify-dist-html.js",
    "lint": "eslint \"src/js/**/*.js\" \"tools/**/*.js\" \"tests/**/*.js\" \"*.config.js\" --max-warnings 1000",
    "lint:strict": "eslint \"src/js/**/*.js\" \"tools/**/*.js\" \"tests/**/*.js\" \"*.config.js\" --max-warnings 0",
    "lint:fix": "eslint \"src/js/**/*.js\" \"tools/**/*.js\" \"tests/**/*.js\" \"*.config.js\" --fix",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,css,html,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,css,html,json,md,yml,yaml}\"",
    "format:check:core": "prettier --check \"src/js/**/*.js\" \"tools/**/*.js\" \"tests/**/*.js\" \"*.config.js\" \"package.json\" \"index.html\"",
    "format:staged": "lint-staged",
    "preview": "vite preview",
    "sitemap": "node tools/generate-sitemap.js",
    "indexnow": "node tools/submit-indexnow.js",
    "lighthouse:ci": "node tools/lighthouse-ci-with-build.js",
    "validate:sprint5": "node tools/validate-sprint5.js",
    "validate:sprint5:live": "node tools/validate-sprint5.js --live",
    "mirror:check": "node tools/check-mirror-consistency.js",
    "mirror:check:strict": "node tools/check-mirror-consistency.js --strict",
    "mirror:refresh": "node tools/refresh-mirror-artifacts.js",
    "firebase:quiet": "node tools/firebase-cli.js",
    "deploy:hosting:quiet": "node tools/firebase-cli.js deploy --only hosting",
    "validate:dist": "node tools/validate-dist.js",
    "minify:html": "node tools/minify-dist-html.js",
    "preprod": "node tools/preprod-check.js",
    "gate:release": "npm run mirror:check:strict && npm run security:scan && npm run test && npm run test:rules",
    "smoke:live": "powershell -ExecutionPolicy Bypass -File tools/smoke-live.ps1",
    "deploy:check": "powershell -ExecutionPolicy Bypass -File tools/deploy-check.ps1",
    "deploy:hosting:stripe": "powershell -ExecutionPolicy Bypass -File tools/deploy-hosting-with-stripe.ps1",
    "test": "npm run test:unit",
    "test:unit": "vitest run tests/unit",
    "test:rules": "node tools/run-firestore-rules-tests.js",
    "test:rules:fuzz": "node tools/run-firestore-rules-tests.js tests/rules/firestore.rules.fuzz.test.js",
    "test:watch": "vitest",
    "test:all": "vitest run tests/unit && node tools/run-firestore-rules-tests.js && npm run build",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test tests/e2e/admin-smoke.spec.js",
    "test:e2e:ui": "playwright test --ui",
    "release:final:ci": "npm run mirror:check:strict && npm run security:scan && npm run test && npm run test:rules && npm run build && npm run validate:dist && npm run validate:sprint5 && npm run lighthouse:ci",
    "release:final": "powershell -ExecutionPolicy Bypass -File tools/release-final.ps1",
    "release:final:fast": "powershell -ExecutionPolicy Bypass -File tools/release-final.ps1 -SkipDeploy -SkipLighthouse -SkipSmoke -SkipTests -SkipLiveValidation",
    "release:final:stripe": "powershell -ExecutionPolicy Bypass -File tools/release-final.ps1 -UseStripe",
    "uptime:check": "node tools/uptime-check.js",
    "validate:external": "node tools/validate-external.js",
    "security:scan": "pwsh -NoProfile -ExecutionPolicy Bypass -File tools/scan-secrets.ps1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.2",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "firebase": "^12.9.0",
    "firebase-admin": "^13.6.1",
    "globals": "^17.3.0",
    "html-minifier-terser": "^7.2.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "tmp": "0.2.5",
    "external-editor": "3.1.0",
    "inquirer": "9.3.8"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,tsx,css,html,json,md,yml,yaml}": [
      "prettier --check"
    ]
  }
}
